{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/common(|/.*)$": "<rootDir>/../../../libs/common/src/$1",
    "^@lib/(.*)$": "<rootDir>/../../../lib/src/$1",
    "^apps/gateway/(.*)$": "<rootDir>/../../../apps/gateway/$1",
    "^apps/users/(.*)$": "<rootDir>/../../../apps/users/$1",
    "^apps/play-spot-services/(.*)$": "<rootDir>/../../../apps/play-spot-services/$1"
  },
  "roots": [
    "<rootDir>",
    "<rootDir>/../../../apps/",
    "<rootDir>/../../../libs/"
  ]
}
